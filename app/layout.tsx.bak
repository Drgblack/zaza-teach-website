    links: linksArray,
    socials: Array.isArray(cfg.socials) ? cfg.socials : [],
    ctas: Array.isArray(cfg.ctas) ? cfg.ctas : [],
    legal: cfg.legal || { privacy: "/privacy", terms: "/terms" },
  };

